page {
  width: 100%;
  height: 100%;
  background: #F3F3F5;
}
.news-page {
  width: 100%;
  height: calc(100% - 10rpx);
  margin-top: 10rpx;
  background: #FFFFFF;
}
.row {
  width: 100%;
  border-bottom: 1px solid #F3F3F5;
  padding: 30rpx 0;
}
.row:last-child {
    border: 0;
}
.row-zhi {
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.row-th {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  width: 100%;
  padding-left: 30rpx;
  padding-right: 50rpx;
  box-sizing: border-box;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.label-name {
  font-size: 30rpx;
  color: black;
}
.label-word {
  width: 690rpx;
  height: 300rpx;
  background: #e6e5e5;
  border-radius: 4px;
  margin-top: 30rpx;
  padding: 19rpx 15rpx;
  font-size: 30rpx;
  color: #999999;
  box-sizing: border-box;
  display: block !important;
}
.label-word textarea {
    width: 100%;
    height: 100%;
    display: block;
}
.init-word {
  width: 220rpx;
  height: 30rpx;
  font-size: 30rpx;
  color: black;
}
.label-init {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.label-init image {
    width: 12rpx;
    height: 30rpx;
}
.label-init .init-word {
    text-align: right;
    margin-right: 10rpx;
}
.label-init .unit {
    font-size: 30rpx;
    margin-right: 10rpx;
}
.but-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 200rpx;
}
.but-list button {
    width: 300rpx;
    height: 100rpx;
    border: 1px solid #4462fe;
    border-radius: 50px;
    color: #FFFFFF;
}
.but-list button:nth-child(1) {
      background: #FFFFFF;
      color: #4462FE;
}
.but-list button:nth-child(2) {
      background: #4462FE;
}

